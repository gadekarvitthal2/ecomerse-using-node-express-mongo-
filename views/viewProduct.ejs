<%- include('common/head_section.ejs') %>
    <h1 style="text-align: center;" >Product List</h1>
    <% if (products.length) { %>
        <div class="card-container">
            <% for (let product of products) { %>
                <div class="product-card">
                    <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
                    <p class="product-name"><%= product.name %></p>
                    <p class="product-price"><%= product.price %></p>
                    <p class="product-description"><%= product.description %></p>
                    <button class="view-product" ><a href="/product/details/<%= product.id %>">View Product</a></button>
                    <button class="view-product"><a href="/viewPageProduct/edit/<%= product.id %>">Edit</a></button>
                    <button class="view-product" class="p-2"><a href="/viewPageProduct/delete/<%= product.id %>">Delete</a></button>
                    <%- include('common/addTocartBtn.ejs', { product: product }) %>
                </div>            
            <% } %>
        </div>
    <% } else { %>
        <h1 style="text-align: center">No products found</h1>
    <% } %>
<%- include('common/footer.ejs') %>